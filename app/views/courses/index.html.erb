<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Course category</th>
      <th>Fee for service</th>
      <th>Vet fee</th>
      <th>Gov funded</th>
      <th>Concession gov funded</th>
      <th>Material cost</th>
      <th>Transfer fee</th>
      <th>Re issue certificate</th>
      <th>Delivery mode</th>
      <th>Location of delivery</th>
      <th>Study duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.code %></td>
        <td><%= course.course_category.try(:title) %></td>
        <td><%= course.fee_for_service %></td>
        <td><%= course.vet_fee %></td>
        <td><%= course.gov_funded %></td>
        <td><%= course.concession_gov_funded %></td>
        <td><%= course.material_cost %></td>
        <td><%= course.transfer_fee %></td>
        <td><%= course.re_issue_certificate %></td>
        <td><%= course.delivery_mode %></td>
        <td><%= course.location_of_delivery %></td>
        <td><%= course.study_duration %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

