<p id="notice"><%= notice %></p>

<h1>Listing Course Categories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_categories.each do |course_category| %>
      <tr>
        <td><%= course_category.title %></td>
        <td><%= course_category.content %></td>
        <td><%= link_to 'Show', [:admin, course_category] %></td>
        <td><%= link_to 'Edit', edit_admin_course_category_path(course_category) %></td>
        <td><%= link_to 'Destroy', [:admin, course_category], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

