<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table class="table" id="courses">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Course category</th>
      <th>Fee for service</th>
      <th>Vet fee</th>
      <th>Gov funded</th>
      <th>Concession gov funded</th>
      <th>Delivery mode</th>
      <th>Location of delivery</th>
      <th>Study duration</th>
      <th>Course review document URL</th>
      <th>Web Url</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.code %></td>
        <td><%= course.course_category.try(:title) %></td>
        <td><%= course.fee_for_service %></td>
        <td><%= course.vet_fee %></td>
        <td><%= course.gov_funded %></td>
        <td><%= course.concession_gov_funded %></td>
        <td><%= course.delivery_mode %></td>
        <td><%= course.location_of_delivery %></td>
        <td><%= course.study_duration %></td>
        <td><%= link_to "Review Document", course.course_review_document, target: "_blank" %></td>
        <td><%= link_to "Web Link", course.web_link, target: "_blank" %></td>
        <td><%= link_to 'Show', [:admin, course] %>
         <%= link_to 'Edit', edit_admin_course_path(course) %>
         <%= link_to 'Destroy',[:admin, course], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

