<div class="row">
	<div class="col-sm-12">
		<div class="checkout-wrap">
		  <ul class="checkout-bar">

		    <li class="visited first">
		      
		      <%= link_to "Login", root_path %>
		    </li>
		   
		    <li class="visited"><%= link_to "Pre Enrolment", pre_enrolment_path %></li>
		    
		    <li class="visited">
		    	<%= link_to "Pre Training Review", edit_pre_training_review_path(current_user.pre_training_reviews.first) %>
		    </li>
		    
		    <li class="visited "><%= link_to "Enrolment", "#"  %></li>
		    
		    <li class="visited"><%= link_to "LLN", "#" %></li>
		    
		    <li class="visited" ><%= link_to "Ids",  "#" %></li>
		    
		    <li class="visited"><%= link_to "Course Review", "#"  %></li>

		    <li class="active last"><%= link_to "Review", "#" %></li>     
