<h3>Add Student Ids-(Identification Documents)</h3>
<p class='alert-warning'><%= @notice %></p>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Document Link</th>
        <th>Category</th>
        <!-- <th>Enrolment</th>
        <th>User</th> -->
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @student_ids.each do |student_id| %>
        <tr>
          <td><%= student_id.title %></td>
          <td>
            <%= link_to(student_id.image.url ) do %>
              <%= student_id.try(:image).try(:original_filename)%> <i class="glyphicon glyphicon-download"></i>
            <% end %>
         </td>
          <td><%= student_id.category %></td>
          <td><% student_id.enrolment_id %></td>
          <td><% student_id.user_id %></td>
          <td><% link_to 'Show', enrolment_student_id_path(@enrolment, student_id) %></td>
          <td><% link_to 'Edit', edit_enrolment_student_id_path(@enrolment, student_id) %></td>
          <td><%= link_to 'Destroy', [@enrolment, student_id], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<% @student_id = StudentId.new %>
<%= render 'form'%>
<div class="row">
  <div class="col-sm-12 vspace vspace-10">
    <div class="control-actions">
      <%= link_to 'Back', enrolment_lln_test_path(@enrolment), class: 'btn btn-primary pull-left' %>
      <%= link_to 'Next', enrolment_course_review_path(@enrolment), class: 'btn btn-primary pull-right' %>
    </div>
  </div>
</div>