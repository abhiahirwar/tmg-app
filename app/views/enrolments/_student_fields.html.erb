
<div class="row">
  <div class="col-sm-1">
    <%= f.select :title, ['Mr.', 'Miss', 'Mrs.'] %>
  </div>
  <div class="col-sm-4">
    <%= f.text_field :surname, label: 'Surname' %>
  </div>
  <div class="col-sm-4">
    <%= f.text_field :firstname, label: 'First Name' %>
  </div>
  <div class="col-sm-3">
    <%= f.text_field :middlename, label: 'Middle Name' %>
  </div>
</div>
<div class="row">
  <div class="col-sm-4">
    <%= f.date_select :dob, :label => "Date of Birth" %>
  </div>
  <div class="col-sm-4">
    <%= f.text_field :home_phone %>
  </div>
  <div class="col-sm-4">
    <%= f.text_field :mobile %>
  </div>
</div>
  <%= f.text_field :email, label: "Email Address" %>





